#!/bin/zsh

# Alias Shortcuts

# zshrc files
alias zrc="vi $HOME/.zshrc"
alias zrcl="vi $HOME/.zshrc.local"
alias sz="source $HOME/.zshrc"

# zsh_aliases files
alias za="vi $HOME/.zsh_aliases"
alias zal="vi $HOME/.zsh_aliases.local"

# zsh_exports files
alias ze="vi $HOME/.zsh_exports"
alias zel="vi $HOME/.zsh_exports.local"

# zsh_functions files
alias zf="vi $HOME/.zsh_functions"
alias zfl="vi $HOME/.zsh_functions.local"

# edit .ssh/config file
alias sc="vi $HOME/.ssh/config"

# vimrc
alias vm="vi $HOME/.vimrc"

# Tmux
alias tm="vi $HOME/.tmux.conf"
alias tx="tmux new -A -s"

# User stuff
alias cdu="cd $USER_HOME"

# This should be the last line of the file
# For local changes
# Don't make edits below this
[ -f ".zsh_aliases.local" ] && source ".zsh_aliases.local"
