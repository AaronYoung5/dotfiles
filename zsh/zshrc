#!/usr/bin/env zsh

# Dotfiles configuration
export DOTFILES_DIR="${DOTFILES_DIR:-$HOME/.dotfiles}"
export PSEUDOS_DIR="${PSEUDOS_DIR:-$HOME/Pseudos}"

# Load base aliases (includes pseudo-switching functions)
[[ -f ~/.config/zsh/aliases.base.zsh ]] && source ~/.config/zsh/aliases.base.zsh

# Enable direnv if available
if command -v direnv &> /dev/null; then
  eval "$(direnv hook zsh)"
fi

# Basic zsh configuration
autoload -Uz compinit && compinit
setopt AUTO_CD
setopt HIST_IGNORE_ALL_DUPS
HISTFILE=~/.zsh_history
HISTSIZE=10000
SAVEHIST=10000

# Simple prompt (customize as needed)
PS1='%F{blue}%~%f %# '

# Pseudo user indicator in prompt when active
if [[ -n "$PSEUDO_USER" ]]; then
  PS1='%F{yellow}[$PSEUDO_USER]%f %F{blue}%~%f %# '
fi
