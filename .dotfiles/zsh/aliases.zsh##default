#!/usr/bin/env zsh

alias vi='vim'

if [[ "$(uname -s)" == "Linux" ]]; then
  alias open='xdg-open'
fi

# Edit configs (base variant)
alias zrc='vi ~/.zshrc\#\#default'
alias za='vi ~/.dotfiles/zsh/aliases.zsh\#\#default'
alias zf='vi ~/.dotfiles/zsh/functions.zsh\#\#default'
alias ze='vi ~/.dotfiles/zsh/exports.zsh\#\#default'
alias vm='vi ~/.vimrc\#\#default'
alias tm='vi ~/.tmux.conf\#\#default'

# Edit configs (active symlink)
alias zrcl='vi ~/.zshrc'
alias zal='vi ~/.dotfiles/zsh/aliases.zsh'
alias zfl='vi ~/.dotfiles/zsh/functions.zsh'
alias zel='vi ~/.dotfiles/zsh/exports.zsh'
alias vml='vi ~/.vimrc'
alias tml='vi ~/.tmux.conf'

# Edit current profile
alias zrcu='[[ -n "$PSEUDO_USER" ]] && vi ~/.dotfiles/zsh/profiles/${PSEUDO_USER}.zsh || echo "Not in pseudo user"'

alias sz='source ~/.zshrc'

alias cdd='cd ~/.dotfiles'
alias cdu='cd ${USER_HOME:-~}'
