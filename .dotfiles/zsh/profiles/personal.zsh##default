#!/usr/bin/env zsh

# Personal profile configuration (default)
export PSEUDO_USER="personal"
export TMUX_SESSION_NAME="personal"
export USER_HOME="$HOME/Pseudos/personal"

# Personal-specific aliases
alias notes='vim ~/notes.md'
alias projects='cd ~/Projects'

# Personal git config
export GIT_AUTHOR_EMAIL="you@personal.com"
export GIT_COMMITTER_EMAIL="you@personal.com"

# Ensure user home directory exists
mkdir -p "$USER_HOME"

echo "Loaded personal profile"
